{
  "hosting": {
    "public": "website/build/docs",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source" : "**/*.@(jpg|jpeg|gif|png|svg)",
        "headers" : [ {
          "key" : "Cache-Control",
          "value" : "max-age=604800"
        } ]
      },
      {
        "source" : "**/*.@(html|js|css)",
        "headers" : [ {
          "key" : "Cache-Control",
          "value" : "max-age=3600"
        } ]
      }
    ]
  }
}
